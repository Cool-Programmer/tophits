<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">

    <div class="panel-heading">
      <% if params[:controller]=='movies' && params[:action]=='edit' %>
        <h1>Edit Movie</h1>
      <% elsif params[:controller]=='movies' && params[:action]=='new' %>
        <h1>New Movie</h1>
      <% end %>
    </div>

    <div class="panel-body">
      <%= form_for @movie, html: { multipart: true } do |f| %>
      <% if movie.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
        <ul>
          <% movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :movie_length %>
        <%= f.text_field :movie_length, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :director %>
        <%= f.text_field :director, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :rating %>
        <%= f.text_field :rating, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
      <div class="actions">
        <%= f.submit 'Add Movie', class: 'btn btn-primary' %>
      </div>
      <% end %>
      <%= link_to 'Back', movies_path %>
    </div>
  </div>
</div>
